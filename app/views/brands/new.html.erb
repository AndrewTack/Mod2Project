<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error|%>
   <li><%= error %></li>
    <% end %>
 </ul>
<% end %>

<%= form_for @brand do |f| %>
<%=f.label :name%>
<%=f.text_field :name%> <br> <br>
<%=f.label :year_founded%>
<%=f.text_field :year_founded%> <br> <br>
<%=f.label :description%>
<%=f.text_area :description%> <br> <br>

 <!-- how do we accept images from desktop / users computer too? -->
<%=f.label "Profile Picture"%>
<%=f.file_field :image_url %> <br> <br>

  <%= f.label "Username" %>
  <%= f.text_field :name %>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
  <%= f.submit %>
  
<%end%>